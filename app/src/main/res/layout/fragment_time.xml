<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context=".TimeFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tbNextSession"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:checked="true"
                android:text="Next Session"
                android:textColor="@color/white"
                android:textOff="Next Session"
                android:textOn="Next Session" />

            <ToggleButton
                android:id="@+id/tbSunday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Sunday"
                android:textColor="@color/white"
                android:textOff="Sunday"
                android:textOn="Sunday" />

            <ToggleButton
                android:id="@+id/tbMonday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Monday"
                android:textColor="@color/white"
                android:textOff="Monday"
                android:textOn="Monday" />

            <ToggleButton
                android:id="@+id/tbTuesday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Tuesday"
                android:textColor="@color/white"
                android:textOff="Tuesday"
                android:textOn="Tuesday" />

            <ToggleButton
                android:id="@+id/tbWednesday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Wednesday"
                android:textColor="@color/white"
                android:textOff="Wednesday"
                android:textOn="Wednesday" />

            <ToggleButton
                android:id="@+id/tbThursday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Thursday"
                android:textColor="@color/white"
                android:textOff="Thursday"
                android:textOn="Thursday" />

            <ToggleButton
                android:id="@+id/tbSaturday"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="Saturday"
                android:textColor="@color/white"
                android:textOff="Saturday"
                android:textOn="Saturday" />

            <ToggleButton
                android:id="@+id/tbAllTime"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="All Days"
                android:textColor="@color/white"
                android:textOff="All Days"
                android:textOn="All Days" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sessionPlanRC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="6"
            tools:listitem="@layout/item_session2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>